<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".Profile2">


    <RelativeLayout
        android:id="@+id/banner"
        android:layout_width="wrap_content"
         android:background="@color/pink"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/toolbar"
            >


            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:menu="@menu/menu"
                app:navigationIcon="@drawable/baseline_menu_24"
                app:title="Profile"
                app:titleTextColor="@color/white">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="120dp"
                    android:src="@drawable/search" />
            </androidx.appcompat.widget.Toolbar>


        </com.google.android.material.appbar.AppBarLayout>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/Juli_data"
        android:layout_below="@id/banner"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        >
        <TextView
            android:id="@+id/juli_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="23dp"
            android:layout_marginTop="30dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-black"
            android:text="Julianna Carter"
            />
        <TextView
            android:id="@+id/photograph"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/juli_name"
            android:layout_marginTop="7dp"
            android:textSize="16dp"
            android:textAlignment="center"
            android:textColor="@color/Light_dark"
            android:text="Photographer"
            />

        <RelativeLayout
            android:id="@+id/Juli_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:layout_below="@+id/photograph"
            >
            <ImageView
                android:id="@+id/icon1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="40dp"
                android:src="@drawable/baseline_message_24"
                />
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@id/icon2"
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/icon1"
                android:src="@drawable/juli"
                android:layout_gravity="center"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/pink"/>
            <ImageView
                android:id="@+id/icon3"
                android:layout_toRightOf="@+id/icon2"
                android:layout_width="40dp"
                android:layout_marginTop="40dp"
                android:layout_height="40dp"
                android:src="@drawable/call_24"
                />

        </RelativeLayout>


    </RelativeLayout>

    <View
        android:id="@+id/view1"
        android:layout_below="@id/Juli_data"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="-70dp"
        android:background="@color/Light_dark"
        android:layout_gravity="center"
        />

    <RelativeLayout
        android:id="@+id/account"
        android:layout_below="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        >
        <RelativeLayout
            android:id="@+id/post1"
            android:layout_width="100dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/post_num1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:fontFamily="sans-serif-black"
                android:text="1.5 K"
                android:textColor="@color/pink"
                />
            <TextView
                android:id="@+id/post_num2"
                android:layout_below="@+id/post_num1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="Posts"
                android:textColor="@color/Light_dark"
                />
            
    </RelativeLayout>

        <RelativeLayout
            android:id="@+id/post2"
            android:layout_toRightOf="@+id/post1"
            android:layout_width="100dp"
            android:layout_marginLeft="25dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/follw_num1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:fontFamily="sans-serif-black"
                android:text="17.5 K"
                android:textColor="@color/pink"
                />
            <TextView
                android:id="@+id/follow_num2"
                android:layout_below="@+id/follw_num1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="Followers"
                android:textColor="@color/Light_dark"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/post3"
            android:layout_toRightOf="@+id/post2"
            android:layout_width="100dp"
            android:layout_marginLeft="25dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/follwing_num1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:fontFamily="sans-serif-black"
                android:text="1.3 K"
                android:textColor="@color/pink"
                />
            <TextView
                android:id="@+id/following_num2"
                android:layout_below="@+id/follwing_num1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="Following"
                android:textColor="@color/Light_dark"
                />

        </RelativeLayout>
    </RelativeLayout>
    <View
        android:id="@+id/view2"
        android:layout_below="@id/account"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/Light_dark"
        android:layout_gravity="center"
        />

    <TextView
        android:id="@+id/lorem"
        android:layout_margin="10dp"
        android:layout_below="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:text=" Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled typesetting, remaining essentially unchanged."
        />

    <View
        android:id="@+id/view3"
        android:layout_below="@id/lorem"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/Light_dark"
        android:layout_gravity="center"
        />

   <RelativeLayout
       android:id="@+id/web_part"
       android:layout_below="@+id/view3"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       >
       <RelativeLayout
           android:id="@+id/Website"
           android:layout_width="150dp"
           android:layout_marginLeft="25dp"
           android:layout_marginTop="10dp"
           android:layout_height="wrap_content">
           <TextView
               android:id="@+id/web1"
               android:layout_width="100dp"
               android:layout_height="wrap_content"
               android:textSize="17dp"
               android:fontFamily="sans-serif-black"
               android:text="Website"
               android:textColor="@color/pink"
               />
           <TextView
               android:id="@+id/web2"
               android:layout_below="@+id/web1"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textSize="15dp"
               android:text="visual-photo.me"
               android:textColor="@color/Light_dark"
               />

       </RelativeLayout>

       <RelativeLayout
           android:id="@+id/Email"
           android:layout_toRightOf="@+id/Website"
           android:layout_width="150dp"
           android:layout_marginLeft="25dp"
           android:layout_marginTop="10dp"
           android:layout_height="wrap_content">
           <TextView
               android:id="@+id/email1"
               android:layout_width="100dp"
               android:layout_height="wrap_content"
               android:textSize="17dp"
               android:fontFamily="sans-serif-black"
               android:text="Email"
               android:textColor="@color/pink"
               />
           <TextView
               android:id="@+id/email2"
               android:layout_below="@+id/email1"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textSize="15dp"
               android:text="juliana.c@gmail.com"
               android:textColor="@color/Light_dark"
               />

       </RelativeLayout>

   </RelativeLayout>



    <RelativeLayout
        android:id="@+id/phone_part"
        android:layout_below="@+id/web_part"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RelativeLayout
            android:id="@+id/phone"
            android:layout_width="150dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/phone1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:fontFamily="sans-serif-black"
                android:text="Phone"
                android:textColor="@color/pink"
                />
            <TextView
                android:id="@+id/phone2"
                android:layout_below="@+id/phone1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="(022)77723287"
                android:textColor="@color/Light_dark"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/Location"
            android:layout_toRightOf="@+id/phone"
            android:layout_width="150dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/Location1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:fontFamily="sans-serif-black"
                android:text="Location"
                android:textColor="@color/pink"
                />
            <TextView
                android:id="@+id/Location2"
                android:layout_below="@+id/Location1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="United States"
                android:textColor="@color/Light_dark"
                />

        </RelativeLayout>

    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/zip_part"
        android:layout_below="@+id/phone_part"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RelativeLayout
            android:id="@+id/zip"
            android:layout_width="150dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/zip1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:fontFamily="sans-serif-black"
                android:text="Zip Code"
                android:textColor="@color/pink"
                />
            <TextView
                android:id="@+id/zip2"
                android:layout_below="@+id/zip1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="6525"
                android:textColor="@color/Light_dark"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/Add"
            android:layout_toRightOf="@+id/zip"
            android:layout_width="150dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/Add1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:fontFamily="sans-serif-black"
                android:text="Address"
                android:textColor="@color/pink"
                />
            <TextView
                android:id="@+id/Add2"
                android:layout_below="@+id/Add1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="160th st, Fresh Meadows,NY,11365"
                android:textColor="@color/Light_dark"
                />

        </RelativeLayout>

    </RelativeLayout>



</RelativeLayout>